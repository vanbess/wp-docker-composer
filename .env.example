# Project and Database Configuration
COMPOSE_PROJECT_NAME=wp-docker-composer
MYSQL_ROOT_PASSWORD=change_this_secure_root_password
MYSQL_DATABASE=wordpress
MYSQL_USER=wpuser
MYSQL_PASSWORD=change_this_secure_password

# Host User Mapping for Development (auto-detected, usually no need to change)
HOST_UID=1000
HOST_GID=1000

# WordPress Configuration
WORDPRESS_TABLE_PREFIX=wp_
WORDPRESS_DEBUG=true
WORDPRESS_DEBUG_LOG=true
WORDPRESS_DEBUG_DISPLAY=false

# Port Configuration (adjust if needed)
MYSQL_PORT=3366
PHPMYADMIN_PORT=8080
WORDPRESS_PORT=8000

# WordPress Admin User (for WP-CLI auto-install - optional)
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=change_this_admin_password
WP_ADMIN_EMAIL=admin@example.com
WP_TITLE=My WordPress Site

# Composer Configuration
COMPOSER_ALLOW_SUPERUSER=1
COMPOSER_PROCESS_TIMEOUT=600

# Development Settings
# Set to 'false' for production
WORDPRESS_DEBUG=true

# Optional: Set timezone
# TZ=America/New_York