{
  "name": "paxi/wp-docker-paxi",
  "description": "WordPress development environment with Docker and Composer",
  "type": "project",
  "license": "MIT",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": ["wpackagist-plugin/*", "wpackagist-theme/*"]
    }
  ],
  "require": {
    "php": ">=8.0",
    "composer/installers": "^2.0",
    "wpackagist-plugin/akismet": "*",
    "wpackagist-plugin/classic-editor": "*",
    "wpackagist-plugin/contact-form-7": "*",
    "wpackagist-plugin/hello-dolly": "^1.7",
    "wpackagist-plugin/jetpack": "^15.1",
    "wpackagist-plugin/woocommerce": "^10.2",
    "wpackagist-plugin/wordfence": "7.10.0",
    "wpackagist-theme/twentytwentyfour": "^1.3"
  },
  "require-dev": {
    "wpackagist-plugin/query-monitor": "*"
  },
  "extra": {
    "installer-paths": {
      "wp_data/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "wp_data/wp-content/themes/{$name}/": ["type:wordpress-theme"],
      "wp_data/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"]
    },
    "wordpress-install-dir": "wp_data"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "post-install-cmd": [
      "echo 'Composer packages installed successfully!'"
    ],
    "post-update-cmd": [
      "echo 'Composer packages updated successfully!'"
    ]
  }
}
